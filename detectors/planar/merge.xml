<lccdd>
  <includes>
    <gdmlFile ref="${DD4hepINSTALL}/DDDetectors/compact/elements.xml"/>
    <gdmlFile ref="${DETECTOR_PATH}/compact/materials.xml"/>
  </includes>
    
  <define>
    <documentation>
      ## World volume
    </documentation>
    <constant name="world_side" value="${world_area}*m" />
    <constant name="world_dx" value="world_side" />
    <constant name="world_dy" value="world_side" />
    <constant name="world_dz" value="${world_depth}*m" />
    <constant name="tracker_region_zmax" value="${world_depth}*m" />
    <constant name="tracker_region_rmax" value="world_side" />
  </define>

  <documentation level="0">
    ## World Volume
    The world is a simple box, but could be a union of multiple regions.
  </documentation>
  <world material="${world_top_material}">
    <shape type="Box" dx="world_side" dy="world_side" dz="world_dz"/>
  </world>
    
  <std_conditions type="NTP" />

  <define>
    <documentation>
      ## Detector Position
    </documentation>
        <constant name="Detector_x_pos" value="${DET_X}*m"/>
        <constant name="Detector_y_pos" value="${DET_Y}*m"/>
        <constant name="Detector_z_pos" value="${DET_Z}*m"/>

    </define>

  <comment> Including the detector </comment>
  <include ref="${DETECTOR_PATH}/detectors/${detector_name}/${detector_xml_name}.xml"/>
    
  <comment> Including the free-sky soil </comment>
  <include ref="${DETECTOR_PATH}/detectors/${detector_name}/soil_${CONFIG}.xml" />


</lccdd>