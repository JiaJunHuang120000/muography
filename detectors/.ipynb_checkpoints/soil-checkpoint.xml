<?xml version='1.0' encoding='utf-8'?>
<lccdd><info name="ZDC_prototype.xml" title="SiPM-on-Tile Zero-Degree Calorimeter Hcal Prototype, Fe/Sc" author="@rymilton" url="https://github.com/rymilton" status="development" version="1.0"><comment /></info>


<std_conditions type="NTP" />

<includes>
    <gdmlFile ref="${DD4hepINSTALL}/DDDetectors/compact/elements.xml" />
    <gdmlFile ref="${DETECTOR_PATH}/compact/materials.xml" />
</includes>

<limits>
    <limitset name="world_limits">
    </limitset>
    <limitset name="beamline_limits">
      <limit name="step_length_max" particles="*" value="1.0" unit="mm" />
      <limit name="track_length_max" particles="*" value="1.0" unit="mm" />
      <limit name="time_max" particles="*" value="0.1" unit="ns" />
      <limit name="ekin_min" particles="*" value="0.001" unit="MeV" />
      <limit name="range_min" particles="*" value="0.1" unit="mm" />
    </limitset>
    <limitset name="cal_limits">
      <limit name="step_length_max" particles="*" value="5.0" unit="mm" />
    </limitset>
  </limits>

  <regions>
    <region name="world_region" eunit="MeV" lunit="mm" cut="0.001" threshold="0.001">
      <limitsetref name="world_limits" />
    </region>
  </regions>

  <display>
    <include ref="${DETECTOR_PATH}/compact/colors.xml" />
  </display>

  <define>
    <constant name="Pi" value="3.14159265359" />
    <constant name="mil" value="0.0254*mm" />
    <constant name="inch" value="2.54*cm" />

    <documentation>
      ## World volume
    </documentation>
    <constant name="world_side" value="100000*m" />
    <constant name="world_dx" value="world_side" />
    <constant name="world_dy" value="world_side" />
    <constant name="world_dz" value="1000*m" />
    <constant name="tracker_region_zmax" value="500*m" />
    <constant name="tracker_region_rmax" value="world_side" />
  </define>

  <documentation level="0">
    ## World Volume

    The world is a simple box, but could be a union of multiple regions.
  </documentation>
  <world material="Vacuum">
    <shape type="Box" dx="world_dx" dy="world_dy" dz="world_dz" />
    
    
  </world>


<detectors><detector id="2000" name="RockWithCubeCutout" type="RockWithCubeCutout" vis="AnlGray" material="Rock">
  <dimensions x="world_dx" y="world_dy" z="world_dz" />
  <position x="0" y="0" z="-world_dz/2" />

  <cube>
    <dimensions x="0.5*m" y="0.5*m" z="1*m" />
    <position x="0*m" y="0*m" z="-25*m" />
  </cube>
  <cube>
    <dimensions x="0.5*m" y="0.5*m" z="1*m" />
    <position x="0*m" y="0*m" z="-50*m" />
  </cube>
  <cube>
    <dimensions x="0.5*m" y="0.5*m" z="1*m" />
    <position x="100*m" y="0*m" z="-25*m" />
  </cube>
  <cube>
    <dimensions x="0.5*m" y="0.5*m" z="1*m" />
    <position x="100*m" y="0*m" z="-50*m" />
  </cube>
  <cube>
    <dimensions x="0.5*m" y="0.5*m" z="1*m" />
    <position x="50*m" y="50*m" z="-25*m" />
  </cube>
  <cube>
    <dimensions x="0.5*m" y="0.5*m" z="1*m" />
    <position x="50*m" y="50*m" z="-50*m" />
  </cube>
</detector></detectors></lccdd>