" type="ZeroDegreeCalorimeterSiPMonTile" readout="MuographyHits1" vis="InvisibleWithDaughters"><position x="ZDCPrototype_x_pos*sin(ZDCPrototype_angle*1)+0*m" y="ZDCPrototype_y_pos*cos(ZDCPrototype_angle*1)+0*m" z="ZDCPrototype_z_pos-2.44*cm-ZDCPrototype_length/2-25*m" /><rotation x="ZDCPrototype_rotateX_angle" y="ZDCPrototype_rotateY_angle" z="ZDCPrototype_rotateZ_angle-ZDCPrototype_angle*1" /><dimensions x="ZDCPrototype_PolystyreneWidth" y="ZDCPrototype_PolystyreneHeight" z="ZDCPrototype_length" /><layer repeat="8" thickness="ZDCPrototype_PolystyreneThickness+0.1*cm" vis="InvisibleWithDaughters" width="ZDCPrototype_PolystyreneWidth" height="ZDCPrototype_PolystyreneHeight"><slice name="Scintillator_slice" material="Polystyrene" thickness="ZDCPrototype_PolystyreneThickness" vis="AnlOrange" sensitive="true" width="ZDCPrototype_PolystyreneWidth" height="ZDCPrototype_PolystyreneHeight" x_offset="0*cm" y_offset="0*cm" /><slice name="Vacuum" material="Vacuum" thickness="0.1*cm" vis="AnlGray" width="ZDCPrototype_PolystyreneWidth" height="ZDCPrototype_PolystyreneHeight" x_offset="0*cm" y_offset="0*cm" /></layer></detector><detector id="14" name="Pathch14" type="ZeroDegreeCalorimeterSiPMonTile" readout="MuographyHits1" vis="InvisibleWithDaughters"><position x="ZDCPrototype_x_pos*sin(ZDCPrototype_angle*2)+0*m" y="ZDCPrototype_y_pos*cos(ZDCPrototype_angle*2)+0*m" z="ZDCPrototype_z_pos-3.66*cm-ZDCPrototype_length/2-25*m" /><rotation x="ZDCPrototype_rotateX_angle" y="ZDCPrototype_rotateY_angle" z="ZDCPrototype_rotateZ_angle-ZDCPrototype_angle*2" /><dimensions x="ZDCPrototype_PolystyreneWidth" y="ZDCPrototype_PolystyreneHeight" z="ZDCPrototype_length" /><layer repeat="8" thickness="ZDCPrototype_PolystyreneThickness+0.1*cm" vis="InvisibleWithDaughters" width="ZDCPrototype_PolystyreneWidth" height="ZDCPrototype_PolystyreneHeight"><slice name="Scintillator_slice" material="Polystyrene" thickness="ZDCPrototype_PolystyreneThickness" vis="AnlOrange" sensitive="true" width="ZDCPrototype