    >
      <position x="Detector_x_pos+Separation*2"         y="Detector_y_pos"         z="Detector_z_pos + Distance"/>
      <rotation x="Detector_rotateX_angle" y="Detector_rotateY_angle" z="Detector_rotateZ_angle"/>
      <dimensions
